extends layout

block extraHeader
	link(rel="stylesheet", href="stylesheets/login.css")

block content

	//- consider adding background image to this page!!!!!!

	//- <!-- LOGIN FORM -->

	div(class="text-center", style="padding:50px 0")
		div(class="logo") 
			p login 

		//- <!-- MAIN Form -->

		div(class="login-form-1")
			form(id="login-form", class="text-left", method="POST", action="/login")
				div(class="login-form-main-message")
				div(class="main-login-form")
					div(class="login-group")
						div(class="form-group")
							input(type="text", class="form-control", id="lg_username", name="username", placeholder="username")
						
						div(class="form-group")
							input(type="password", class="form-control", id="lg_password", name="password", placeholder="password")
						
						div(class="form-group")
							input(type="email", class="form-control", id="lg_remember", name="email", placeholder="email")
						
					button(type="submit", class="login-button")
						i(class="fa fa-chevron-right")
				
				div(class="etc-login-form")
					p forgot your password? 
						a(href="#") click here

	//- <!-- REGISTRATION FORM -->

	div(class="text-center", style="padding:50px 0")
		div(class="logo") 
			p register

		//- <!-- Main Form -->

		div(class="login-form-1")
			form(id="register-form", class="text-left", method="POST", action="/signup")
				div(class="login-form-main-message")
				div(class="main-login-form")
					div(class="login-group")
						div(class="form-group")
							label(for="reg_username", class="sr-only") 
							input(type="text", class="form-control", id="reg_username", name="username", placeholder="username")
						
						div(class="form-group")
							label(for="reg_password", class="sr-only") 
							input(type="password", class="form-control", id="reg_password", name="password", placeholder="password")
						
						div(class="form-group")
							label(for="reg_email", class="sr-only")
							input(type="email", class="form-control", id="reg_email", name="email", placeholder="email")
						
						div(class="form-group")
							label(for="reg_fullname", class="sr-only") 
							input(type="text", class="form-control", id="reg_fullname", name="fullname", placeholder="full name")

					button(type="submit", class="login-button")
						i(class="fa fa-chevron-right")

		//- <!-- end:Main Form -->


	//- <!-- FORGOT PASSWORD FORM -->

	div(class="text-center", style="padding:50px 0")
		div(class="logo") forgot password?

		//- <!-- Main Form -->

		div(class="login-form-1")
			form(id="forgot-password-form", class="text-left")
				div(class="etc-login-form")
					p When you fill in your registered email address, you will be sent instructions on how to reset your password.

				div(class="login-form-main-message")
				div(class="main-login-form")
					div(class="login-group")
						div(class="form-group")
							input(type="text", class="form-control", id="fp_email", name="fp_email", placeholder="email address")


					button(type="submit", class="login-button")
						i(class="fa fa-chevron-right")
