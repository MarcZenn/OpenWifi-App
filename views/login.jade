block loginHeader
	link(rel="stylesheet", href="stylesheets/login.css")



//- <!-- LOGIN FORM -->
div(class="text-center", style="padding:50px 0")
	div(class="logo") 
		p(style="color: white") login 

	//- <!-- MAIN Form -->
	p.loginError(ng-show="loginError") Tsk, tsk, Gotta Sign Up First 

	div(class="login-form-1")
		form(id="login-form", class="text-left", ng-submit="loginUser()")
			div(class="login-form-main-message")
			div(class="main-login-form")
				div(class="login-group")
					div(class="form-group")
						input(type="text", class="form-control", id="lg_username", ng-model="loginFormdata.username", placeholder="username")
					
					div(class="form-group")
						input(type="password", class="form-control", id="lg_password", ng-model="loginFormdata.password", placeholder="password")
					
					div(class="form-group")
						input(type="email", class="form-control", id="lg_remember", ng-model="loginFormdata.email", placeholder="email")
					
					button(type="submit", class="login-button")
						i(class="fa fa-chevron-right")


//- <!-- REGISTRATION FORM -->
div(class="text-center", style="padding:50px 0")
	div(class="logo") 
		p(style="color: white") register

	//- <!-- Main Form -->
	p.signupError(ng-show="signupError") Oh No! Username already exists  

	div(class="login-form-1")
		form(id="register-form", class="text-left", ng-submit="registerUser()")
			div(class="login-form-main-message")
			div(class="main-login-form")
				div(class="login-group")
					div(class="form-group")
						input(type="text", class="form-control", id="reg_username", ng-model="signupFormdata.username", placeholder="username")
					
					div(class="form-group")
						input(type="password", class="form-control", ng-model="signupFormdata.password", placeholder="password")
					
					div(class="form-group")
						input(type="email", class="form-control", ng-model="signupFormdata.email", placeholder="email")
					
					div(class="form-group")
						input(type="text", class="form-control", ng-model="signupFormdata.name", placeholder="name")

					button(type="submit", class="login-button")
						//- i(class="fa fa-chevron-down")


	//- <!-- end:Main Form -->


//- <!-- FORGOT PASSWORD FORM -->

div(class="text-center", style="padding:50px 0")
	div(class="logo",style="color: white") forgot password?

	//- <!-- Main Form -->

	div(class="login-form-1")
		form(id="forgot-password-form", class="text-left", ng-click="forgotLogin()")
			div(class="etc-login-form")
				p When you fill in your registered email address, you will be sent instructions on how to reset your password.

			div(class="login-form-main-message")
			div(class="main-login-form")
				div(class="login-group")
					div(class="form-group")
						input(type="text", class="form-control", id="fp_email", name="fp_email", placeholder="email address")


				button(type="submit", class="login-button")
					i(class="fa fa-chevron-right")


